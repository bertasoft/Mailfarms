@page "/private/utenti/editor"
@layout PrivateLayout
@using MailFarmsBlazor.Code
@inherits PageComponent
@inject LayoutService layoutService

@code {
    TextBox __TextBox_Nome;
    TextBox __TextBox_Cognome;
    TextBox __TextBox_Email;
    TextBox __TextBox_Password;

    BlazorLibrary.Component.CheckBox __CheckBox_Attivo;
    BlazorLibrary.Component.CheckBox __CheckBox_Admin;

    protected override void OnInitialized()
    {
        layoutService.OnTitlePageCallback.InvokeAsync("Utenti - Editor");
    }
}

<LoginComponent />

<div class="row">
    <div class="col-lg-12">
        <div class="panel">

            <div class="panel-body form-horizontal">
                <div class="form-group">
                    <label class="col-md-3 control-label">Nome</label>
                    <div class="col-md-3">
                        <TextBox @ref="__TextBox_Nome" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Cognome</label>
                    <div class="col-md-3">
                        <TextBox @ref="__TextBox_Cognome" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Email</label>
                    <div class="col-md-3">
                        <TextBox @ref="__TextBox_Email" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Email</label>
                    <div class="col-md-3">
                        <TextBox @ref="__TextBox_Password" class="form-control" Type="BlazorLibrary.Component.TextBox.TextBoxTypeEnum.Password" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Attivo</label>
                    <div class="col-md-3">
                        <div class="col-md-6 pad-no form-block">
                            <CheckBox @ref="__CheckBox_Attivo" Style="height:28px" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Admin</label>
                    <div class="col-md-3">
                        <div class="col-md-6 pad-no form-block">
                            <CheckBox @ref="__CheckBox_Admin" Style="height:28px" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 col-md-push-3">
                        <MyButton OnClickCallback="SalvaClick" Text="Salva" Class="btn btn-primary" />
                        <MyButton OnClickCallback="NuovoClick" Text="Nuovo" Class="btn btn-primary" />
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>