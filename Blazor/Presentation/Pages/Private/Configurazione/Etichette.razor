@page "/private/configurazione/etichette"
@layout PrivateLayout
@using MailFarmsBlazor.Code
@inherits PageComponent
@inject LayoutService layoutService

@code {
    TextBox __TextBox_Filtro;
    TextArea __TextBox_Valore;
    Select __DropDownList_Etichette;

    protected override void OnInitialized()
    {
        layoutService.OnTitlePageCallback.InvokeAsync("Configurazione - Etichette");
    }
}

<LoginComponent />

<div class="row">
    <div class="col-lg-12">
        <div class="panel">

            <div class="panel-body form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 control-label">Filtro</label>
                    <div class="col-md-10">
                        <div class="input-group mar-btm col-md-9">
                            <TextBox @ref="__TextBox_Filtro" class="form-control" placeholder="Filtro" />
                            <span class="input-group-btn">
                                <MyButton class="btn btn-default" OnClickCallback="FiltraClick" ButtonType="BlazorLibrary.Component.MyButton.ButtonTypeEnum.Button" Text="Filtra" />
                                <MyButton class="btn btn-default" OnClickCallback="ResetClick" ButtonType="BlazorLibrary.Component.MyButton.ButtonTypeEnum.Button" Text="Reset" />
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Seleziona</label>
                    <div class="col-md-10">
                        <div class="col-md-9 pad-no form-block">
                            <Select @ref="__DropDownList_Etichette" OnSelectChangeCallback="EtichetteOnSelectedIndexChanged" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Contenuto</label>
                    <div class="col-md-10">
                        <div class="col-md-9 pad-no form-block">
                            <TextArea @ref="__TextBox_Valore" rows="20" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 col-md-push-2">
                        <MyButton OnClickCallback="SalvaClick" Text="Salva" Class="btn btn-primary" />
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>