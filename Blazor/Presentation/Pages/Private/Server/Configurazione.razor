@page "/private/server/configurazione"
@layout PrivateLayout
@using MailFarmsBlazor.Code
@inherits PageComponent
@inject LayoutService layoutService

@code {

    TextArea __TextBox_Valore;
    Select __DropDownList_Selezione;

    protected override void OnInitialized()
    {
        layoutService.OnTitlePageCallback.InvokeAsync("Server - Configurazione");
    }
}

<LoginComponent />

<div class="row">
    <div class="col-lg-12">
        <div class="panel">

            <div class="panel-body form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 control-label">Seleziona</label>
                    <div class="col-md-10">
                        <div class="col-md-9 pad-no form-block">
                            <Select @ref="__DropDownList_Selezione" OnSelectChangeCallback="DropDownListSelezioneSelectIndexChanged" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Valore</label>
                    <div class="col-md-10">
                        <div class="col-md-9 pad-no form-block">
                            <TextArea @ref="__TextBox_Valore" rows="10" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 col-md-push-2">
                        <MyButton OnClickCallback="SalvaClick" Text="Salva" Class="btn btn-primary" />
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>